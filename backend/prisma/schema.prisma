generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
enum Role{
  USER
  ADMIN
}

model User{
  id Int @id @default(autoincrement())
  name String
  mobile String @unique
  email String @unique
  password String
  role Role @default(USER)
  votes Vote[]
  feedbacks Feedback[]

  @@map("users")
}
model Poll{
  id Int @id @default(autoincrement())
  title String @unique
  description String
  options PollOption[]
  createdAt DateTime @default(now())
  isActive Boolean @default(true)

  @@map("polls")
}
model PollOption{
  id Int @id @default(autoincrement())
  name String  @unique
  poll Poll @relation(fields: [pollId],references: [id])
  pollId Int
  votes Vote[]

  @@map("poll_options")
  @@unique([name, pollId])
}
model Vote{
  id Int                @id @default(autoincrement())
  user User             @relation(fields: [userId],references: [id])
  userId Int
  pollOption PollOption @relation(fields: [pollOptionId],references: [id])
  pollOptionId Int
  votedAt DateTime      @default(now())

  @@map("votes")
  @@unique([userId, pollOptionId])
}
model Feedback {
  id Int @id @default(autoincrement())
  message String
  user User? @relation(fields: [userId],references: [id])
  userId Int?
  createdAt DateTime @default(now())

  @@map("feedbacks")
}

